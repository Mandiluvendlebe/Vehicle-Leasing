@model IEnumerable<VehicleLeasingApplication.Models.Driver>

@{
    ViewData["Title"] = "Index";
}

<h1>All Drivers</h1>

<p>
    <a asp-action="Create">Add New Driver</a>
</p>

<form asp-action="Index" method="get" class="mb-3 row g-3 align-items-end">
    <div class="col-md-4">
        <label for="searchString">Search by Driver Name</label>
        <input type="text" name="searchString" class="form-control"
               value="@Context.Request.Query["searchString"]" placeholder="e.g. Sipho Ndlovu" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DriverID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DriverID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DriverID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
