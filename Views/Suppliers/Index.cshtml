@model IEnumerable<VehicleLeasingApplication.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h1>All Suppliers</h1>

<p>
    <a asp-action="Create">Add New Supplier</a>
</p>

<form asp-action="Index" method="get" class="mb-3 row g-3 align-items-end">
    <div class="col-md-4">
        <label for="searchString">Search by Name</label>
        <input type="text" name="searchString" class="form-control"
               value="@Context.Request.Query["searchString"]" placeholder="e.g. Toyota" />
    </div>
    <div class="col-md-4">
        <label for="location">Filter by Location</label>
        <select name="location" class="form-control" asp-items="ViewBag.Locations">
            <option value="">All Locations</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SupplierID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SupplierID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SupplierID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
